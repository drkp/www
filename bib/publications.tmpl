<table class="table">
<tbody>
	{%- set prev_year = 1900 %}
	{%- set prev_month = 0 %}
	{%- for entry in entries %}
	<tr>
		<td>
			<span class="date">
				{% if entry.fields['year'] != prev_year %}
				<big><strong>{{ entry.fields['year'] }}</strong></big><br />
				{%- set prev_year = entry.fields['year'] %}
				{{ entry.fields['month']|monthname }}
                {%- set prev_month = entry.fields['month'] %}
                {% else %}
                {% if entry.fields['month'] != prev_month %}
                {{ entry.fields['month']|monthname }}
				{%- set prev_month = entry.fields['month'] %}
                {% endif %}
                {% endif %}        
			</span>
		</td>
		<td class="publication">
			<span class="pubtitle">
			    <b>{{ entry|title }}.</b>
			</span><br />
			<span class="authors">
				{{ entry.persons['author']|author_list }}.
			</span><br />
			<span class="venuetype">{{ entry|venue_type -}}</span><span class="venue">{{ entry|venue -}}</span>.
			{%- if entry.fields['note'] %}
			<span class="note">
			<b>{{ entry.fields['note']|escape }}.</b>
			</span>
			{%- endif %}
			<br />
			<span class="links btn-group">
				{%- if entry.fields['abstract'] %}
				<a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);" onclick="$('#abstract_{{entry.fields['key']}}').slideToggle('fast');return false;">
                <i class="fa fa-chevron-down"></i> abstract</a>
				{%- endif %}
            {%- set url = entry|main_url %}
				{%- if url %}
				<a class="btn btn-default btn-xs" href="{{ url|escape }}">
                <i class="fa fa-download"></i> pdf</a>
                {%- endif %}
			{%- for type, url in (entry|extra_urls).iteritems() %}
				<a class="btn btn-default btn-xs" href="{{ url|escape }}">
                <i class="fa fa-chevron-right"></i> {{ type|escape }}</a>
			{%- endfor %}
			</span>
			{%- if entry.fields['abstract'] %}
			<div id="abstract_{{entry.fields['key']}}" class="abstract well">
			{{ entry.fields['abstract'] |escape }}
			</div>
			{%- endif %}
		</td>
	</tr>
	{%- endfor %}
</tbody>
</table>
